# Nginx server configuration for benjeffrey.com

server {
    listen              80;         ## listen for ipv4
#   listen              [::]:80;    ## listen for ipv6

    server_name         benjeffrey.com;
    root                /var/www/benjeffrey.com;

    location / {
            index       index.html index.htm index;
            try_files   $uri $uri/ $uri.html =404;
    }
}

# redirect *.benjeffrey.com to benjeffrey.com
server {
    server_name         *.benjeffrey.net;
    return              301 $scheme://benjeffrey.net$request_uri;
}
